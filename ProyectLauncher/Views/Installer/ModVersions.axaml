<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Height="450" Width="500"
        x:Class="ProyectLauncher.Views.Installer.ModVersions"
        Title="Mods Loader">
  
  <RelativePanel Height="390">
    
    <TextBlock Name="LoadersLbl" FontSize="30" FontWeight="Bold" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignTopWithPanel="True">Mods Loaders</TextBlock>
    
    <TabControl Name="Tabs" Margin="5" RelativePanel.AlignLeftWithPanel="True" RelativePanel.Below="LoadersLbl">
      <TabItem Header="Fabric">
        <RelativePanel>
        <ListBox Name="ListFabric" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True" Height="225"></ListBox>
        <Button Margin="5" Name="InstallFabricBt" RelativePanel.Below="ListFabric" RelativePanel.AlignHorizontalCenterWithPanel="True"
               Height="40" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Instalar Version</Button>
        </RelativePanel>
      </TabItem>
    </TabControl>
    
  </RelativePanel>
</Window>
